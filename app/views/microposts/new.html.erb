<%= render 'layouts/flash_messages' %>
<%= provide(:title, '写真投稿') %>
<h1>写真投稿</h1>
<%= form_for(@micropost) do |f| %>
  <%= render 'layouts/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "ここにコメントを入力してください" %>
  </div>
  <%= f.file_field :image %>
  <%= f.submit "投稿する", class: "btn btn-primary" %>
  <% end %>
