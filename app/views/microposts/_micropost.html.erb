<li id="micropost-<%= micropost.id%>">
  <%= link_to gravatar_for(micropost.user, size: 50) %>
    <span class="user"><%= link_to micropost.user.username %></span>
        <span class="content"><%= micropost.content %></span>
        <% if micropost.image.attached? %>
        <span class="image"><%= image_tag micropost.image.variant(combine_options:{resize:"250x250^",crop:"250x250+0+0",gravity: :center}).processed %></span>

        <% end %>
        <span class="timestamp">
          <%= time_ago_in_words(micropost.created_at) %>
          前に投稿されました。
          <% if current_user.id == micropost.user_id %>
            <%= link_to '削除する' , micropost, method: :delete, data: { confirm: "本当に削除しますか？"}  %>
          <% end %>
        </span>
</li>